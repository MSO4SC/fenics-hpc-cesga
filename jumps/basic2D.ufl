cell = "triangle"

constant_scalar = FiniteElement("Discontinuous Lagrange", cell, 0)


v    =  TestFunction(constant_scalar)   # constant scalar test basis function
u    =  Coefficient(constant_scalar)                # momentum

n = FacetNormal(cell)


L = jump(u,n[0])*avg(v)*dS

